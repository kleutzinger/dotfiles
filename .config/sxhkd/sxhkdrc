#!/usr/bin/env sh

# https://github.com/RaitaroH/sxhkd_plasma
super + alt + {Right,Left}
    {qdbus org.kde.kglobalaccel /component/kwin org.kde.kglobalaccel.Component.invokeShortcut 'Window to Next Desktop',\
    qdbus org.kde.kglobalaccel /component/kwin org.kde.kglobalaccel.Component.invokeShortcut 'Window to Previous Desktop'}

# https://web.archive.org/web/20200816032902/https://my-take-on.tech/2020/07/03/some-tricks-for-sxhkd-and-bspwm/#reloading-sxhkdrc

super + shift + r
    pkill -usr1 -x sxhkd; notify-send -t 15000 'sxhkd' 'Reloaded config'

super + shift + k
    $HOME/scripts/edit-hotkeys.sh

super + w
    xdotool search "Mozilla Firefox" windowactivate || firefox
    # firefox
    #tdrop -h '100%' $BROWSER "file:///home/kevin/rescale/kevdocs/joey-new-tab.html"

super + shift + w
    firefox 'https://www.google.com/android/find?u=0'

super + Return
    mini-kitty.sh

super + space
    dmenu_run -fn 'Droid Sans Mono-25'

super + shift + space
    xfce4-popup-whiskermenu

super + q
    wmctrl -c :ACTIVE:

Print
    flameshot gui

shift + Print
    flameshot full -p $HOME/Pictures/scrots

F1
    $HOME/scripts/toggle-term.sh

shift + F1
    tdrop $BROWSER

super + n
    fish -c "check-notes.fish"

super + e
    thunar

super + shift + b
    $BROWSER 127.0.0.1:9001/admin/

super + o
    terminator -m -e "game.sh"

super + shift + o
    cool-retro-term -e game.sh d

super + c
    fish -c "check-notes.fish"

super + shift + c
    setxkbmap us -variant colemak -option ctrl:swap_lalt_lctl && notify-send 'colemak enabled'

# Disconnect from PS4 controller
super + b
    bluetoothctl -- disconnect 1C:66:6D:C4:DD:FA && notify-send -t 1000 "Disconnected from Dualshock 4"

# Put computer to sleep

super + shift + s
    python $HOME/scripts/going-to-sleep.py

# turn off screen
#super + shift +  s
    #xset dpms force off

super + shift + f
    ~/scripts/clip-fmt-py.sh && notify-send -t 1000 "Fmt Python"

super + y
    notify-send "$(xsel -ob)"; mpv $(xsel -ob)

super + l
    slock

super + g
    ~/scripts/gym-busy.fish

super + u
    cd ~/Music; ~/scripts/bandcamp-downloader.sh $(xsel -ob)

## Some commnad to switch directly to VS Code Screen (super + 1)
# not using super keys anywhere and i might as well

super + p
    lxrandr

super + v
    xfce4-clipman-history

super + shift + v
    terminator -e "~/scripts/edit-clipboard.sh"

super + h
    $HOME/scripts/google-doc-insert-today-header.sh

super + shift + h
   python3 /home/kevin/scripts/grid_overlay.py

super + shift + t
    notify-send "trying to get torrent $(xsel -ob)"; python3 ~/scripts/rutorrent.py $(xsel -ob) | ~/scripts/notify-pipe

super + shift + u
    $HOME/scripts/window-select.sh

super + shift + e
    sleep 0.5; xdotool type 'thedookmaster@gmail.com'

super + shift + m
    terminator -m -e "~/scripts/movie_api.py"

#super + m
#    $HOME/scripts/window-control.fish max
